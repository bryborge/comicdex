<div class="row">
  <%= render "users/shared/settings_sidebar" %>

  <div class="col-md-10">
    <h2>Public Profile</h2>

    <%= form_for(@user, url: users_profile_path, method: :patch) do |f| %>
      <div class="mb-3">
        <%= f.label :nickname, class: "form-label" %>
        <%= f.text_field :nickname, class: "form-control" %>
      </div>

      <%= f.submit "Update", class: "btn btn-primary py-2" %>
    <% end %>
  </div>

</div>
