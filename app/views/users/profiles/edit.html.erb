<div class="row">
  <div class="col-md-2">
    <%= link_to "Public profile", edit_users_profile_path, class: "dropdown-item" %>
    <%= link_to "Account", edit_user_registration_path, class: "dropdown-item" %>
  </div>

  <div class="col-md-10">
    <h2>Public Profile</h2>

    <%= form_for(@user, url: users_profile_path, method: :patch) do |f| %>
      <%= f.label :nickname %>
      <%= f.text_field :nickname %>

      <%= f.submit 'Update' %>
    <% end %>
  </div>

</div>
