<div class="row">
  <%= render "users/shared/settings_sidebar" %>

  <div class="col-md-10">
    <h2>Public Profile</h2>

    <%= form_with(model: @user, url: users_profile_path, local: true, method: :patch) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h3><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar, alt: "user avatar", class: "rounded-circle", height: "260" %>
      <% else %>
        <%= image_tag "blank_avatar.svg", alt: "blank avatar", height: "260" %>
      <% end %>

      <div class="mb-3">
        <%= f.label :avatar, "Update Avatar", class: "form-label" %>
        <%= f.file_field :avatar, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :nickname, class: "form-label" %>
        <%= f.text_field :nickname, class: "form-control" %>
      </div>

      <%= f.submit "Update", class: "btn btn-primary py-2" %>
    <% end %>
  </div>
</div>
