<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <%= image_tag "logo.svg", alt: "Comicdex logo", style: "filter: brightness(0) invert(1);", height: "50" %>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleable" aria-controls="navbarToggleable" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarToggleable">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <% if current_page?(root_path) %>
              <%= link_to "Dashboard", root_path, class: "nav-link" %>
            <% else %>
              <%= link_to "#{current_user.nickname}", user_path(current_user.id), class: "nav-link" %>
            <% end %>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto align-items-center">
          <li class="nav-item">
            <%= link_to "Browse", comics_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <button class="btn btn-dark btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= image_tag "avatar.svg", alt: "blank avatar", height: "40" %>
            </button>
            <div class="dropdown">
              <ul class="dropdown-menu dropdown-menu-end">
                <li>
                  <%= link_to "Your Profile", user_path(current_user.id), class: "dropdown-item" %>
                </li>
                <li>
                  <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                </li>
              </ul>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
