<h2>Comics</h2>

<div class="row">
  <% if @comics.any? %>
    <% @comics.each do |comic| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2 mb-4">
        <%= link_to comic_path(comic), class: 'text-decoration-none' do %>
          <div class="card">
            <%= image_tag 'no_photo_available.svg', class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><%= "#{comic.title} ##{comic.issue_number}" %></h5>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <p>There are no comics to show :(</p>
  <% end %>
</div>
